<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="wk.dao.PlanDAO">
    <insert id="insertPlan">
        insert into `plan` value (#{planID},
        #{planName},
        #{planHeading},
        #{planRelease},
        #{planDeadline},
        #{planDescribe})
    </insert>
    <select id="queryByID" resultType="wk.entity.Plan">
        select * from `plan` where planID = #{planID}
    </select>

    <select id="queryAll" resultType="wk.entity.Plan">
        select * from `plan`
    </select>
    <select id="queryByName" resultType="wk.entity.Plan">
        select * from `plan` where planName = #{planName}
    </select>
    <select id="getLastID" resultType="java.lang.String">
        select planID from `plan` order by planID desc limit 1
    </select>
    <select id="deletePlanByID">
        delete from `plan` where planID = #{planID}
    </select>
    <select id="updatePlan">
        update `plan` set planHeading = #{planHeading},
        planName = #{planName},
        planDeadline = #{planDeadline},
        planRelease = #{planRelease},
        planDescribe = #{planDescribe}
        where planID = #{planID}
    </select>
</mapper>