<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="wk.dao.InfoDAO">
    <insert id="createNewInfo">
        insert into `info` (userID, infoName, infoSelf) value (#{userID}, #{infoName}, #{infoSelf} )
    </insert>

    <select id="countNewInfo"  resultType="Integer">
        select count (*)
        from  info
        where userID = #{userID}
    </select>

    <select id="queryAllInfo"  resultType="wk.entity.Info">
        select *
        from  info
        where userID = #{userID};
    </select>
</mapper>