<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.done.dao.GroupDAO">
    <select id="queryByID" resultType="com.done.entity.Group">
		select * from `group` where groupID = #{groupID}
    </select>

    <select id="queryAll" resultType="com.done.entity.Group">
		select * from `group`
	</select>

    <select id="queryByName" resultType="com.done.entity.Group">
        select * from `group` where groupName = #{groupName}
    </select>
    <select id="getLastID" resultType="java.lang.String">
        select groupID from `group` order by groupID desc limit 1
    </select>



    <!-- 创建小组 -->
    <insert id="insertGroup" parameterType="com.done.entity.Group" useGeneratedKeys="true" keyProperty="groupID" >
        INSERT INTO group VALUES(#{groupName},#{groupDescribe})
    </insert>
</mapper>