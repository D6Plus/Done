<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.done.dao.PlanDAO">
    <insert id="insertPlan">
        insert into `plan` value (#{planID}, #{planName}, #{planHeading},
                                  #{planRelease},#{planDeadline},#{planDescribe})
    </insert>
    <select id="queryByID" resultType="com.done.entity.Plan">
		select * from `plan` where planID = #{planID}
    </select>

    <select id="queryAll" resultType="com.done.entity.Plan">
		select * from `plan`
	</select>
    <select id="queryByName" resultType="com.done.entity.Plan">
        select * from `plan` where planName = #{planName}
    </select>
    <select id="getLastID" resultType="java.lang.String">
        select planID from `plan` order by planID desc limit 1
    </select>

</mapper>